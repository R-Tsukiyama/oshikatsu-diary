<div class="user-post-container">
  <div class="user-section">
    <%= render 'users/show' %>
  </div>
  <div class="post-section">
    <div class="PostContentContainer">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <a class="nav-link active" id="post-tab" data-bs-toggle="tab" href="#post" role="tab" aria-controls="post" aria-selected="false">投稿一覧</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="calendar-tab" data-bs-toggle="tab" href="#calendar" role="tab" aria-controls="calendar" aria-selected="true"><i class="far fa-calendar-alt"></i></a>
        </li>
      </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="post" role="tabpanel" aria-labelledby="post-tab">
        <section class="post-index">
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Tag</th>
                <th>Edit/Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= link_to post.title, posts_show_path(post) %></td>
                  <td><%= post.date %></td>
                  <td><%= render 'layouts/shared/tag_list', tag_list: post.tag_list %></td>
                  <td>
                    <div class="dropdown">
                      <div class="d-flex" id="dropdown-button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-ellipsis-v"></i>
                      </div>
                      <ul class="dropdown-menu DropdownMenu" aria-labelledby="dropdown-button">
                        <li class="dropdown-item"><%= link_to "編集", edit_post_path(post) %></li>
                        <li class="dropdown-item danger"><%= link_to "削除", post_path(post), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "text-danger" %></li>
                      </ul>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </section>
      </div>
      <div class="tab-pane fade" id="calendar" role="tabpanel" aria-labelledby="calendar-tab">
        <turbo-frame id="calendar-frame" turbo-visit-control="reload">
          <div class="CalendarContainer">
            <%= month_calendar events: @posts do |date, post| %>
              <%= date.day %><br>
              <% post.each do |post| %>
                <%= link_to post.title, post, data: { turbo_frame: "_top" } %>
              <% end %>
            <% end %>
          </div>
        </turbo-frame>
      </div>
    </div>
  </div>
</div>
<div class="floating-action-button">
  <div class="article">
    <div class="balloon jump">新規投稿する</div>
      <%= link_to posts_new_path do %>
        <%= image_tag 'plusicon.png', alt: "新規投稿", class: "navbar-newpost-img", size: '50x50' %>
      <% end %>
    </div>
  </div>
</div>
