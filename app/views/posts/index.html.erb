<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Tag</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.date %></td>
        <td><%= render 'layouts/shared/tag_list', tag_list: post.tag_list %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
