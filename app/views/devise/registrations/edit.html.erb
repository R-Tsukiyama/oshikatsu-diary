<section class="UserEditSection">
  <div class="UserEditContainer">
    <ul class="NavList">
      <li class="NavListItem">
      <%= link_to(:back) do %>
        <i class="fas fa-reply"></i>
        戻る
      <% end %>
      </li>
    </ul>
    <div class="AccountInformation">
      <div class="AccountHeader">
        <h3>アカウント編集</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mb-4 form-group">
          <div class="label-text">
            <%= f.label :email, "メールアドレス", class: "form-label" %>
          </div>
          <div class="input-form">
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder:"メールアドレスを入力" %>
          </div>
        </div>
        <div class="mb-4 form-group">
          <div class="label-text">
            <%= f.label :password, "変更後パスワード", class: "form-label" %>
          </div>
          <div class="input-form">
            <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', placeholder:"変更後パスワードを入力" %>
          </div>
        </div>
        <div class="mb-4 form-group">
          <div class="label-text">
            <%= f.label :password_confirmation, "確認用パスワード", class: "form-label" %>
          </div>
          <div class="input-form">
            <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', placeholder:"変更後パスワードを入力" %>
          </div>
        </div>
        <div class="mb-4 form-group">
          <div class="label-text">
            <%= f.label :current_password, "現在のパスワード", class:"form-label" %>
          </div>
          <div class="input-form">
            <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control', placeholder:"現在のパスワードを入力" %>
          </div>
        </div>
        <div class="form-buttons">
        <%= link_to "キャンセル", posts_index_path, class: "btn btn-outline-secondary cancel" %>
          <%= f.submit "保存", class:"btn btn-primary submit " %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%= render 'layouts/shared/footer' %>
